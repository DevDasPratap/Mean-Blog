<div class="author">
    <h1 class="author_heading">Hi i am PD</h1>
    <p class="author_body">JS developer</p>
</div>
<img src="/img/hero-image.webp" alt="Person looking out through window" class="hero-image" width="981" height="529">
<section class="articles">
    <h2 class="articles_heading">Latest post</h2>
    <ul class="article-ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%- post._id %>">
                    <span><%- post.title%></span>
                    <span class="article-list_date"><%- post.createdAt.toDateString() %></span>
                </a>
            </li>
            <% }) %>
    </ul>
    <% if(nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View Older Posts</a>
    <% } %>
</section>